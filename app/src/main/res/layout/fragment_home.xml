<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.HomeFragment"
    android:layout_marginTop="16dp"
    android:tag="home_fragment">

    <include
        android:id="@+id/label_top_rated"
        layout="@layout/movies_category_label"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <include
        android:id="@+id/label_most_popular"
        layout="@layout/movies_category_label"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/label_top_rated"/>

    <include
        android:id="@+id/label_favorites"
        layout="@layout/movies_category_label"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/label_most_popular"/>

</androidx.constraintlayout.widget.ConstraintLayout>